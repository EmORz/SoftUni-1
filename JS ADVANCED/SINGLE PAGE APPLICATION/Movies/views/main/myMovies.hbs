{{>header}}
<div id="myMovies">
    <h1>My Movies</h1>
    <div class="movies">
        <div class="movies">
            {{#each movies}}
            {{#if isCreator}}
            <div class="movie">
                <h2>Title: {{title}}</h2>
                <img src="{{imageUrl}}">
                <p>Available Tickets: {{tickets}}</p>
                <div class="btn-group">
                    <button><a href="#/edit/{{_id}}">Edit</a></button>
                    <button><a href="#/delete/{{_id}}">Delete</a></button>
                    <button><a href="#">Buy Ticket</a></button>
                    <button><a href="#/details/{{_id}}">Details</a></button>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
</div>
{{>footer}}